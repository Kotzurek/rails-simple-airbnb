<div class="container">
<h1>Add a new Flat:</h1>

<%= form_for(@flat) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.label :price_per_night %>
<%= f.text_field :price_per_night %>
<%= f.label :number_of_guests %>
<%= f.text_field :number_of_guests %>
<%= f.submit %>
<% end %>

</div>



<%= link_to "Back to Home", flats_path  %>
