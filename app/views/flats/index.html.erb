<div class="navbar">
  <%= link_to "Add Flat", new_flat_path, class: "button"  %>
</div>
<h1>These are all our amazing flats:</h1>
<div class="cards">
  <% @flats.each do |flat| %>
    <div class="flat_card">
      <img src="https://picsum.photos/200" alt="">
      <h3><%= flat.name %></h3>
      <p><%= flat.address %></p>
      <div class="details">
        <i class="fas fa-user-friends"></i>
        <%= flat.number_of_guests %>
        <i class="fas fa-euro-sign"></i>
        <%= flat.price_per_night %>
      </div>
      <div class="links">
          <%= link_to "More info", flat_path(flat) %>
          <%= link_to "Edit", edit_flat_path(flat) %>
          <%= link_to "Delete", flat_path(flat), method: :delete, data: {confirm: 'Do you want to delete this flat?'} %>
      </div>
    </div>
  <% end %>
</div>
